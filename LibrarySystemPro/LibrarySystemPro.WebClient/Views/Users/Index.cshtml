@model IEnumerable<LibrarySystemPro.WebClient.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    |
    @Html.ActionLink("Rent Book", "Rent")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Username: ")
        </th>
        <th>
            @Html.Label("Unique Id Number: ")
        </th>
        <th>
            @Html.Label("Address: ")
        </th>
        <th>
            @Html.Label("Gender: ")
        </th>
        <th>
            @Html.Label("Phone number: ")
        </th>
        <th>
            @Html.Label("Email: ")
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UniqueIdNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }) |
            @Html.ActionLink("Return Books", "Return", new { id=item.Id})
        </td>
    </tr>
}

</table>

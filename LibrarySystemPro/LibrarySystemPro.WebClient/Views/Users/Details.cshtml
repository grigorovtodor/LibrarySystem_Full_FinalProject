@model LibrarySystemPro.WebClient.Models.User

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Username: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.Label("Unique ID Number: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UniqueIdNumber)
        </dd>

        <dt>
            @Html.Label("Address: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.Label("Gender: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <dt>
            @Html.Label("Phone number: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.Label("Email: ")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        
        <dd>
            @Html.Label("Rented books: ")
        </dd>

        <dt>
            @Html.DisplayFor(model => model.RentedBooks)
        </dt>

        <dd>
            <table class="table">
                <tr>
                    <th>Book Title: </th>
                    <th>Date rented: </th>
                    <th>Date to return: </th>
                </tr>
                @foreach (var item in Model.RentedBooks.Where(x => x.IsDeleted != true).ToList())
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Book.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateRented)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateToReturn)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        @*<dt>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>*@

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
